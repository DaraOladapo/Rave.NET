<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <ReleaseVersion>0.01</ReleaseVersion>
    <Version>1.0.1</Version>
    <Authors>Dara Oladapo</Authors>
    <Company>Dara Oladapo</Company>
    <Description>Flutterwave RAVE Payment API Library for .NET.</Description>
    <RepositoryUrl>https://github.com/DaraOladapo/Rave.NET</RepositoryUrl>
    <PackageTags>Payment API, Payment Gateway, Flutterwave, Flutterwave .NET, Flutterwave RAVE, RAVE API, Flutterwave Payment Gateway</PackageTags>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>flwicon.png</PackageIcon>
    <Copyright>Dara Oladapo</Copyright>
    <ApplicationIcon>flwicon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\flwicon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <Resource Include="Assets\flwicon.ico" />
    <Resource Include="Assets\flwicon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <None Update="Assets\flwicon.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
